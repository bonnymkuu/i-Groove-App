<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/top_shape"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text="Confirm your payment"/>
        <Button
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/btnPay"
            android:paddingLeft="50sp"
            android:paddingRight="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pay Now"
            android:backgroundTint="#0384f4"
            android:paddingHorizontal="50sp"/>
        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="enter amount"
            android:inputType="textPersonName"
            android:autofillHints=""/>
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@drawable/googlepay_button_background"
            android:padding="2sp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:contentDescription="@string/googlepay_button_content_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">
                <ImageView
                    android:id="@+id/googlePayButton"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/googlepay_button_content"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"/>
            </LinearLayout>
            <ImageView
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/googlepay_button_overlay"
                android:scaleType="fitXY"
                android:contentDescription="@string/one"/>
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="By submitting your credentials you agree to the terms and conditions of I Groove App"
            android:layout_marginVertical="15sp"/>
        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your payment message to download the song"
            android:inputType="textPersonName"
            android:autofillHints=""/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/paypalBtn"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:text="Paypal"
                android:layout_weight="1"
                android:backgroundTint="#0384f4"
                android:paddingHorizontal="30sp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:enabled="false"
                android:id="@+id/download_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_download_24"
                android:layout_weight="0.4"
                android:contentDescription="@string/two"/>
            <Button
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/stripeBtn"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:text="Card"
                android:layout_weight="1"
                android:backgroundTint="#0384f4"
                android:paddingHorizontal="30sp"/>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="60sp"
            android:layout_height="60sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/mtn"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/telcom"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/voda"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mtnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with MTN"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/telkomBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with Telkom"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/vodacomBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay with Vodacom"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="Enjoy the music"
            android:layout_marginVertical="15sp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="terms and conditions apply"
            android:layout_marginVertical="15sp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
