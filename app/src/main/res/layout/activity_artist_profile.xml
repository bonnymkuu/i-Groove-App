<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#d06f8bfa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="100sp">
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/userprofile"
                android:contentDescription="@string/one"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/usernameTextView"
            android:padding="6sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bioTextView"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="Bio"
            android:layout_marginHorizontal="20sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:backgroundTint="#5e121733"
            app:cardCornerRadius="20sp">
            <LinearLayout
                android:orientation="vertical"
                android:background="#5e2e324c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginVertical="20sp">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:id="@+id/priceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:text="price"
                    android:layout_marginHorizontal="20sp"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:id="@+id/transportEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:text="Transport price per hour"/>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:id="@+id/depositEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:text="Deposit"
                    android:layout_marginHorizontal="20sp"/>
                <Button
                    android:textColor="#fff"
                    android:id="@+id/editButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="30sp"
                    android:text="Edit About"
                    android:backgroundTint="#ff9800"
                    android:layout_marginHorizontal="30sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noticeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/UpcomingEventsSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/titleText1"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Songs"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/songsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:id="@+id/titleText2"
            android:background="@drawable/back_text"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My venues"
            android:paddingHorizontal="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/venueRecyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:id="@+id/titleText3"
            android:background="@drawable/back_text"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My sounds"
            android:paddingHorizontal="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/soundRecyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/recommendedLabel"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Recommended New Artist for You"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
