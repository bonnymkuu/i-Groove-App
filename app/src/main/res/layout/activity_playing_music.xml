<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#233649"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/musicName"
            android:focusableInTouchMode="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="Music Name"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:layout_weight="1"
            android:marqueeRepeatLimit="marquee_forever"/>
        <ImageView
            android:id="@+id/more"
            android:padding="7dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_more_vert_24"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Playing Audio"
        android:layout_below="@+id/ll1"/>
    <ImageView
        android:id="@+id/rotatingIcon"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/baseline_audio"
        android:layout_centerInParent="true"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_above="@+id/time"
        android:layout_marginHorizontal="20sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/white"
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:text="00:00"
        android:layout_above="@+id/ll2"
        android:layout_marginHorizontal="20sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/favorite"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_favorite_border_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_skip_previous_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"/>
        <ImageView
            android:id="@+id/rewind"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_fast_rewind_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:src="@drawable/baseline_play_circle_filled_24"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/forward"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_fast_forward_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_skip_next_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"/>
        <ImageView
            android:id="@+id/loop"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_repeat_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/loopOne"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/baseline_repeat_one_24"
            android:layout_weight="1"
            android:layout_marginVertical="10sp"/>
    </LinearLayout>
</RelativeLayout>
