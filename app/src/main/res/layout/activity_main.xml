<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:background="#ffeb3b"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
            <TextView
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3b82b4"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_groove"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#560898"
                android:id="@+id/title11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Good Music"
                android:layout_below="@+id/title"/>
            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/groove_logo"
                android:contentDescription="@string/one"
                android:layout_toStartOf="@+id/logoutIcon"
                android:layout_toEndOf="@+id/title"/>
            <ImageView
                android:id="@+id/account_balance"
                android:padding="5dp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/baseline_account_balance_24"
                android:contentDescription="@string/one"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/logoutIcon"/>
            <ImageView
                android:id="@+id/logoutIcon"
                android:padding="10sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/logout"
                android:contentDescription="@string/one"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginVertical="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/userLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/genresImageView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_audio_file_24"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"
                    app:tint="#ffc107"/>
                <ImageView
                    android:id="@+id/othersActivity"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_audio"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"/>
                <ImageView
                    android:id="@+id/venueActivity"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"
                    app:tint="#ffc107"/>
                <ImageView
                    android:id="@+id/soundActivity"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_keyboard_voice_24"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"
                    app:tint="#ffc107"/>
                <ImageView
                    android:id="@+id/addActivity"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"
                    app:tint="#ffc107"/>
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/baseline_search_24"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginVertical="5dp"
                    app:tint="#ffc107"/>
                <ImageView
                    android:id="@+id/userPic"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_user"
                    android:layout_weight="1"
                    android:contentDescription="@string/one"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:tint="#ffc107"/>
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/usernameTextView"
                android:background="@drawable/back_reverse"
                android:paddingLeft="30sp"
                android:paddingTop="5dp"
                android:paddingRight="30sp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:layout_below="@+id/userLayout2"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="30sp"
                android:paddingVertical="5dp"/>
        </RelativeLayout>
        <View
            android:background="#4e4c4a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/upcomingEventsLabel"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Events"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/UpcomingEventsSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <View
            android:background="#4e4c4a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/topSongsLabel"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Top Musics"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/songsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:verticalSpacing="10dp"
            android:layout_marginVertical="10dp"/>
        <View
            android:background="#4e4c4a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/topArtistsLabel"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Top 10 Artists"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artistsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"/>
        <View
            android:background="#4e4c4a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginVertical="10sp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/recommendedLabel"
            android:background="@drawable/back_text"
            android:paddingLeft="30sp"
            android:paddingTop="5dp"
            android:paddingRight="30sp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New Artist"
            android:paddingHorizontal="30sp"
            android:paddingVertical="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#ffeb3b"
            android:id="@+id/paypalLinkTextView"
            android:padding="16dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="terms and conditions apply"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
